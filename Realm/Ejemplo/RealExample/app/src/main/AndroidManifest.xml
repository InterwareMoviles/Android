<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="interware.realexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.CategoriesActivity"
            android:label="Categorias" />
        <activity
            android:name=".Activities.TiendasActivity"
            android:label="Tiendas" />
        <activity
            android:name=".Activities.AddProductActivity"
            android:label="Nuevo Producto" />
        <activity
            android:name=".Activities.ProductsActivity"
            android:label="@string/title_activity_products"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>